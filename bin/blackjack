#!/usr/bin/env ruby
require 'lib/comm'
require 'lib/placer'

decks = 1
p2s = s2p	= IO.popen("ruby ./bin/bjserver #{decks}",'w+')

p2c = c2p	= IO.popen("ruby ./bin/gtk2fixed_client",'w+')
comm		= Comm.new( c2p, p2c )

places = Places.new
# The rest time is 0.1
Placer.new( decks, comm, places, 0.1).run(s2p,p2s) 
